Control:
  template: |
    <div class="control">
      <div class="label">
        <% if not params[:label].nil? %>
          <%= params[:label].render %>
        <% else %>
          <label for="<%= params[:name] %>"><%= params[:name] %></label>
        <% end %>
      </div>
      <div class="input">
        <% if not params[:input].nil? %>
          <%= params[:input].render %>
        <% else %>
          <input name="<%= params[:name] %>" type="<%= params[:type] %>" />
        <% end %>
      </div>
    </div>

  parameters:
    :name:
    :type: text
    :label: ~
    :input: ~
